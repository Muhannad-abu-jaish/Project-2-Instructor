<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/card_sections"
    app:cardBackgroundColor="@color/Lgary"
    app:cardCornerRadius="40dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--ImageVIew to display our Course Image-->
        <ImageView
            android:id="@+id/idIVCourseImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_logosvg" />

        <!--Text View to display Course Name-->
        <LinearLayout
            android:id="@+id/linearsection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/idIVCourseImage"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="5 "
                android:textColor="@color/Blue"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idsection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=" الشعبة :"
                android:textColor="@color/Blue"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!--Text VIew to display COurse Rating-->
        <!--Image used in present in drawable folder-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toEndOf="@+id/idIVCourseImage"
            android:layout_below="@+id/linearsection"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>